<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/title_loyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/heart_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usuario_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                tools:text="Nombre de la medicina" />

            <TextView
                android:id="@+id/date_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/heart_card"
                android:layout_alignEnd="@+id/heart_card"
                android:layout_weight="3"
                android:editable="false"
                android:textAlignment="center"
                android:textSize="14dp"
                tools:text="24/10/2019" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/motivo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:editable="false"
                android:padding="6dp"
                android:paddingHorizontal="20dp"
                tools:text="descripcion" />
            <TextView
                android:id="@+id/estado_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motivo_card"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:editable="false"
                android:padding="6dp"
                android:paddingHorizontal="20dp"
                tools:text="Estado" />
            <TextView
                android:id="@+id/horario_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/estado_card"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:editable="false"
                android:padding="6dp"
                android:paddingHorizontal="20dp"
                tools:text="Fecha" />


            <TextView
                android:id="@+id/curso_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horario_card"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:editable="false"
                android:padding="6dp"
                android:paddingHorizontal="20dp"
                tools:text="curso" />

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>